<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/kod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите код из E-mail"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#5B8F8B8B"
        android:text="<"
        android:textColor="#9A9797"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="322dp" />

    <EditText
        android:id="@+id/editTextNumberPassword2"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="322dp" />

    <EditText
        android:id="@+id/editTextNumberPassword3"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="322dp" />

    <EditText
        android:id="@+id/editTextNumberPassword4"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="484dp" />

</androidx.constraintlayout.widget.ConstraintLayout>